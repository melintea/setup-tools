#
# export DISPLAY=`who | grep -m 1 \`whoami\` | sed s/.*\(// | sed s/\)//`:0 #Khaldoun
export DISPLAY=`who | grep $USER | tail -n 1 | sed -n '/(/,/)/{:a; $!N; /)/!{$!ba}; s/.*(\([^)]*\)).*/\1/p}'`
if [[ ! "$DISPLAY" =~ ":0" ]]; then
    export DISPLAY="$DISPLAY":0.0
fi
echo "Setting DISPLAY to $DISPLAY"

